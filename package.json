{
    "name": "cloudconvert-bot",
    "description": "Telegram bot forwarding files to cloudconvert.com to convert them",
    "version": "2.1.0",
    "private": true,
    "license": "AGPL",
    "author": "@KnorpelSenf",
    "engines": {
        "node": ">=8.0.0"
    },
    "scripts": {
        "prepare": "npm run gcp-build",
        "build": "tsc && rm -rf built/bot/locales/ && cp -r src/bot/locales/ built/bot/",
        "gcp-build": "tsc && cp -r src/bot/locales/ built/bot/",
        "start": "DEBUG=app,err node built/app.js",
        "debug": "DEBUG='*' node built/app.js",
        "clean": "rm -r built/*",
        "lint": "tslint",
        "deploy": "gcloud app deploy"
    },
    "dependencies": {
        "@google-cloud/firestore": "^3.7.2",
        "axios": "^0.19.2",
        "cloudconvert": "^1.1.2",
        "debug": "^4.1.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "rundef": "^1.2.6",
        "runtypes": "^4.2.0",
        "telegraf": "^3.36.0",
        "telegraf-i18n": "^6.6.0",
        "telegraf-session-firestore": "^2.1.0",
        "treeify": "^1.1.0"
    },
    "devDependencies": {
        "@types/debug": "^4.1.5",
        "@types/express": "^4.17.3",
        "@types/treeify": "^1.0.0",
        "tslint": "^5.20.1",
        "typescript": "^3.8.3"
    }
}
