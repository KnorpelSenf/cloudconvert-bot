{
    "compilerOptions": {
        "charset": "utf8",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "keyofStringsOnly": true,
        "module": "commonjs",
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "outDir": "./built/",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": []
}
